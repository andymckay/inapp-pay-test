!!!
html
  head
    title='In-App Payments Tester'
    meta(charset='utf-8')
    meta(name='format-detection', content='telephone=no')
    meta(name='viewport', content='user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width, height=device-height, target-densitydpi=device-dpi')
    link(rel='app-manifest', href=config.manifestURL)
    link(rel='stylesheet', type='text/css', href='css/index.css')

  body
    #app
      div #{config.mozPayAudience}
      #error
      #jwt
        //- temporarily disabling sign-in
        //
          div#signin
            button Loading...
          div#signout.hidden
            button Loading...
        div
          button#refresh Refresh JWT
        #log.hidden
          ul
        form#jwt-input
          #jwt-panel
            textarea Loading...
          div
            button#pay(type='submit') Pay
            button#toggle(type='button') Show log

    #footer
      a(href='http://github.com/kumar303/inapp-pay-test',
        target='_blank') View source code of this app

    script(src='js/lib/jquery-1.9.1.min.js')
    script(src='js/index.js')
    script(src='https://login.persona.org/include.js')
